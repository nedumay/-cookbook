<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookbook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cb"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cb_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cookbook">
        <activity
            android:name=".presentation.ui.MainActivityMenu"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.ListRecipes"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.registration.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.start.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>