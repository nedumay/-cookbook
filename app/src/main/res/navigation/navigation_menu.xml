    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_menu"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.cookbook.ui.main.MainFragment"
        android:label="@string/main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.cookbook.ui.favorite.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/myRecipesFragment"
        android:name="com.example.cookbook.ui.myrecipes.MyRecipesFragment"
        android:label="@string/my_recipes"
